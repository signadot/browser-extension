{
  "manifest_version": 2,

  "name": "Signadot Chrome Extension",
  "description": "Signadot Chrome Extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/signadot-logo.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
}
